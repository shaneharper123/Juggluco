<?xml version="1.0" encoding="utf-8"?>
<android.widget.HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:id="@+id/background" >

    <androidx.core.widget.NestedScrollView
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <android.widget.GridLayout
            android:id="@+id/grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="12"
            android:paddingTop="18dp"
            android:paddingBottom="30dp"
            android:paddingLeft="25dp"
            android:paddingRight="8dp"
	    >
            <TextView
                android:id="@+id/bluestate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_row="0"
                android:text="" />

            <CheckBox
                android:id="@+id/streamhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_columnSpan="2"
                android:layout_row="0"
                android:text="@string/streamhistory" />



            <CheckBox
                android:id="@+id/usebluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_columnSpan="2"
                android:layout_row="0"
                android:text="@string/use_bluetooth" />
            <CheckBox
                android:id="@+id/priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="7"
                android:layout_columnSpan="1"
                android:layout_row="0"
                android:text="@string/high_priority" />
            <CheckBox
                android:id="@+id/android13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="8"
                android:layout_columnSpan="2"
                android:layout_row="0"
                android:text="@string/android13" />

            <TextView
                android:id="@+id/scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="8"
                android:layout_row="1"
                android:text="" />
            <Spinner
                android:id="@+id/sensors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_row="2" />



            <TextView
                android:id="@+id/deviceaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_columnSpan="2"
                android:layout_row="2"
                android:text="" />


            <Button
                android:id="@+id/forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_columnSpan="2"
                android:layout_row="2"
                android:text="@string/forget" />


            <TextView
                android:id="@+id/streaming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="7"
                android:layout_columnSpan="2"
                android:layout_row="2"
                android:text="" />

            <TextView
                android:id="@+id/stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="3"
                android:text="@string/stage" />

            <TextView
                android:id="@+id/reenable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_row="3"
		    android:paddingLeft="8dp"
		    android:paddingRight="8dp"
                android:text="@string/last_success" />


            <TextView
                android:id="@+id/finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_columnSpan="2"
                android:layout_row="3"
		    android:paddingLeft="8dp"
		    android:paddingRight="8dp"
                android:text="@string/last_failure" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:layout_columnSpan="2"
                android:layout_row="3"
		    android:paddingLeft="8dp"
		    android:paddingRight="8dp"
                android:text="@string/failure_info" />
            <Button
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="10"
                android:layout_columnSpan="2"
                android:layout_row="2"
                android:layout_rowSpan="2"
                android:text="@string/info" />
            <TextView
                android:id="@+id/connection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

		    android:paddingRight="8dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="4"
                android:text="@string/connection" />

            <TextView
                android:id="@+id/consuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
		    android:paddingLeft="8dp"
		    android:paddingRight="8dp"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_row="4" />

            <TextView
                android:id="@+id/confail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
		    android:paddingLeft="8dp"
		    android:paddingRight="8dp"
                android:layout_column="4"
                android:layout_columnSpan="2"
                android:layout_row="4" />

            <TextView
                android:id="@+id/constatus"
                android:layout_width="wrap_content"
		    android:paddingLeft="8dp"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:layout_columnSpan="2"
                android:layout_row="4" />

            <TextView
                android:id="@+id/locationpermission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
		    android:paddingRight="8dp"
                android:layout_columnSpan="2"
                android:layout_row="5"
                android:text="@string/unlock_key" />

            <TextView
                android:id="@+id/keysuccess"
                android:layout_width="wrap_content"
		    android:paddingLeft="8dp"
		    android:paddingRight="8dp"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_columnSpan="2" />


            <TextView
                android:id="@+id/keyfailure"
                android:layout_width="wrap_content"
		    android:paddingLeft="8dp"
		    android:paddingRight="8dp"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_columnSpan="2" />

            <TextView
                android:id="@+id/keyinfo"
                android:layout_width="wrap_content"
		    android:paddingLeft="8dp"
		    android:paddingRight="8dp"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="2"
		    android:paddingRight="8dp"
                android:layout_row="6"
                android:text="@string/glucose_value" />

            <TextView
                android:id="@+id/glucosesuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="6"
		    android:paddingLeft="8dp"
		    android:paddingRight="8dp"
                android:layout_columnSpan="2" />

            <TextView
                android:id="@+id/glucosefailure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_row="6"
		    android:paddingLeft="8dp"
		    android:paddingRight="8dp"
                android:layout_columnSpan="2" />

            <TextView
                android:id="@+id/glucoseinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:layout_row="6"
		    android:paddingLeft="8dp"
                android:layout_columnSpan="2" />
            <TextView
                android:id="@+id/rssi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="8"
                android:layout_row="4"
                android:rotation="-90"

                android:layout_rowSpan="2"
                android:layout_columnSpan="1" />
            <Button
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="10"
                android:layout_columnSpan="2"
                android:layout_row="4"
                android:layout_rowSpan="3"
                android:text="@string/closename" />



        </android.widget.GridLayout>
    </androidx.core.widget.NestedScrollView>

</android.widget.HorizontalScrollView>



